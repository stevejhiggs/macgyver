{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"]
}
